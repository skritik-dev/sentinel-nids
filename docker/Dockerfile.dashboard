FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ src/
COPY data/ data/

# Set Python path
ENV PYTHONPATH=/app/src

# Expose Streamlit Port
EXPOSE 8502

# Run the Dashboard
CMD ["streamlit", "run", "src/sentinel/dashboard.py", "--server.port", "8502", "--server.address", "0.0.0.0"]